<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adoptatumascota">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdoptaTuMascota">
        <activity
            android:name=".MenuAdoptanteActivity"
            android:exported="false"
            android:label="@string/title_activity_menu_adoptante"
            android:theme="@style/Theme.AdoptaTuMascota.NoActionBar" />
        <activity
            android:name=".PrincipalActivity"
            android:exported="false" />
        <activity
            android:name=".InicioActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".RegistroActivity"
            android:exported="true" />

        <activity
            android:name=".RegistroAnuncioActivity"
            android:exported="true" />
    </application>

</manifest>