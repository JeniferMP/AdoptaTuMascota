<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav.AgregarAnuncioFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="#B6D9E8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Registrar Anuncio"
            android:textSize="27sp"
            android:fontFamily="serif"/>

        <Spinner
            android:id="@+id/crear_anuncio_spinner_especie"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp" />


        <EditText
            android:id="@+id/crear_anuncio_txt_nombre"
            android:layout_width="295dp"
            android:layout_height="49dp"
            android:layout_margin="4dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:hint="Nombre"
            android:maxLength="30"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_action_nombrepet"
            android:background="@drawable/custom_input"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="498dp" />

        <EditText
            android:id="@+id/crear_anuncio_txt_raza"
            android:layout_width="295dp"
            android:layout_height="49dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:hint="Raza"
            android:maxLength="30"
            android:inputType="text"
            android:background="@drawable/custom_input"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="498dp" />

        <EditText
            android:id="@+id/crear_anuncio_txt_descripcion"
            android:layout_width="295dp"
            android:layout_height="49dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:hint="DescripciÃ³n de anuncio"
            android:maxLength="100"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_action_descripcion"
            android:background="@drawable/custom_input"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="498dp" />

        <EditText
            android:id="@+id/crear_anuncio_txt_edad"
            android:layout_width="295dp"
            android:layout_height="49dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:hint="Edad de mascota"
            android:maxLength="30"
            android:inputType="text"
            android:background="@drawable/custom_input"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="498dp" />

        <Spinner
            android:id="@+id/crear_anuncio_spinner_provincia"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Spinner
            android:id="@+id/crear_anuncio_spinner_distrito"
            android:layout_width="match_parent"
            android:layout_height="60dp" />


        <Button
            android:id="@+id/crear_anuncio_btn_guardar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="#E9EDEF"
            android:drawableRight="@drawable/ic_action_buttoguardar"
            android:hint="@string/reg_btn_registrar"
            android:text="Guardar"
            android:textAllCaps="false"
            app:cornerRadius="20dp" />

    </LinearLayout>

</FrameLayout>